                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volunteering Activity \nAddress: 123 Fake Street, City, State \nTime: 1:00 PM - 3:00PM Saturday, Dec 6th" />

